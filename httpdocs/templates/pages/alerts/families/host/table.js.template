[
    /* Date */
    {name: 'tstamp', data: 'tstamp', className: 'text-center',},
    /* Duration */
    {name: 'duration', data: 'duration', className: 'text-center', orderable: false, render: DataTableRenders.secondsToTime},
    /* Counts */
    {name: 'count', className: 'text-center', data: 'count', visible: false},
    /* Severity */
    {name: 'severity', className: 'text-center', data: 'severity', render: DataTableRenders.formatValueLabel},
    /* Alert Type */
    {name: 'alert_id', data: 'alert_id', orderable: false, className: 'text-center', render: DataTableRenders.formatValueLabel},
    /* IP Address */
    {name: 'ip', data: 'ip', render: (ipAddress, type, row) => {
        if (type !== "display") return ipAddress;
        const label = `${ipAddress} ${row.is_attacker ? '<i class="fas fa-skull-crossbones"></i>' : ''} ${row.is_victim ? '<i class="fas fa-sad-tear"></i>' : ''}`;
        return DataTableRenders.filterize(ipAddress, label);
    }},
    /* IP Address */
    {name: 'hostname', data: 'hostname'},
    /* Description */
    {name: 'description', data: 'msg', orderable: false,},
]